<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="woocommerce_instance_dashboard_kanban" model="ir.ui.view">
        <field name="name">woocommerce.instance.dashboard.kanban</field>
        <field name="model">sale.shop</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_salesteam_kanban" create="0">
                <field name="name"/>
                <field name="woocom_kanban_dashboard"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(0)}">
                            <t t-value="JSON.parse(record.woocom_kanban_dashboard.raw_value)" t-set="dashboard"/>
	                        <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name" />
                                    </div>
                                    <div class="o_secondary">
                                        <field name="company_id" />
                                    </div>
                                </div>
	                        </div>
                            <div class="container o_kanban_card_content o_visible">
                                <div class="row">
                                    <div class="col-xs-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="%(action_amazon_operation)d"
                                            type="action" context='{"from_import":True}'>Import</button>
                                        <button class="btn btn-primary" name="%(action_amazon_operation)d"
                                            type="action" context='{"from_update":True}'>Update</button>
                                        <button class="btn btn-primary" name="%(action_amazon_operation)d"
                                            type="action" context='{"from_export":True}'>Export</button>
                                       
                                    </div>
                                </div>
                            </div>
                            
                            <div class="container o_kanban_card_manage_pane o_visible">
                                <div class="row">
                                    <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_view" t-if="dashboard.all_order">
                                        <div class="o_kanban_card_manage_title">
                                            <span>Orders</span>
                                        </div>
                                        <div>
                                            <div t-if="dashboard.all_order" class="row">
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_all_order">All Order</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.all_order"/> 
                                                </div> 
                                            </div>

                                            <div t-if="dashboard.pending_order" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_pending_order">Pending Order</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.pending_order"/> 
                                                </div> 
                                            </div>

                                            <div t-if="dashboard.complete_order" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_complete_order">Completed Order</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.complete_order"/> 
                                                </div>
                                            </div>

                                            <div t-if="dashboard.draft_order" class="row">
                                                
                                                <div class="col-xs-9">
                                                    <a type="object" name="action_view_draft_order">Draft Order</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.draft_order"/> 
                                                </div>
                                            </div>

                                            <div t-if="dashboard.cancel_order" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_cancel_order">Cancel Order</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.cancel_order"/> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div
                                        class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_new">
                                        <div class="o_kanban_card_manage_title" t-if="dashboard.all_invoice">
                                            <span>Invoices</span>
                                        </div>

                                        <div>
                                            <div t-if="dashboard.all_invoice" class="row">
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_all_invoice">All Invoice</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.all_invoice"/> 
                                                </div> 
                                            </div>

                                            <div t-if="dashboard.pending_invoice" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_pending_invoice">Pending Invoice</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.pending_invoice"/> 
                                                </div> 
                                            </div>

                                            <div t-if="dashboard.complete_invoice" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_complete_invoice">Completed Invoice</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.complete_invoice"/> 
                                                </div>
                                            </div>

                                            <div t-if="dashboard.draft_invoice" class="row">
                                                
                                                <div class="col-xs-9">
                                                    <a type="object" name="action_view_draft_invoice">Draft Invoice</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.draft_invoice"/> 
                                                </div>
                                            </div>

                                            <div t-if="dashboard.cancel_invoice" class="row">
                                                
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_cancel_invoice">Cancel Invoice</a>
                                                </div> 
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.cancel_invoice"/> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_reports">
                                        <div class="o_kanban_card_manage_title" t-if="dashboard.all_stock">
                                            <span>Delivery Orders</span>
                                        </div>

                                        <div>
                                            <div t-if="dashboard.all_stock" class="row">
                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_all_stock">All Delivery</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.all_stock"/>
                                                </div>
                                            </div>

                                            <div t-if="dashboard.pending_stock" class="row">

                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_pending_stock">Pending Delivery</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.pending_stock"/>
                                                </div>
                                            </div>

                                            <div t-if="dashboard.complete_stock" class="row">

                                                <div class="col-xs-9">
                                                     <a type="object" name="action_view_complete_stock">Completed Delivery</a>
                                                </div>
                                                <div class="col-xs-3 text-right">
                                                    <t t-esc="dashboard.complete_stock"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

      <record id="dashboard_woocommerce_instance_kanban" model="ir.actions.act_window">
        <field name="name">Instance Dashboard</field>
        <field name="res_model">sale.shop</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="usage">menu</field>
        <field name="domain">[('woocommerce_shop','=',True)]</field>
    </record>


</data>
</odoo>
